{
  "name": "allofhealth-api",
  "version": "0.0.1",
  "description": "",
  "author": "3illBaby",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build && npm run sentry:sourcemaps",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "generate": "drizzle-kit generate",
    "migrate": "node migrate.js",
    "migrate:drizzle": "drizzle-kit migrate",
    "studio": "drizzle-kit studio",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org allof-health --project node-nestjs ./dist && sentry-cli sourcemaps upload --org allof-health --project node-nestjs ./dist",
    "sentry:sourcemaps:conditional": "if [ \"$SKIP_SENTRY_SOURCEMAPS\" != \"true\" ]; then npm run sentry:sourcemaps; else echo 'Skipping Sentry sourcemaps upload'; fi",
    "build:ci": "nest build && npm run sentry:sourcemaps:conditional"
  },
  "dependencies": {
    "@biconomy/account": "^4.5.7",
    "@itgorillaz/configify": "^4.0.0",
    "@keyv/redis": "^5.1.1",
    "@neondatabase/serverless": "^1.0.1",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/bull": "^11.0.2",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@sentry/cli": "^2.53.0",
    "@sentry/nestjs": "^10.10.0",
    "@types/bcrypt": "^5.0.2",
    "@types/form-data": "^2.2.1",
    "@types/uuid": "^10.0.0",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "drizzle-orm": "^0.44.2",
    "eslint-plugin-neverthrow": "^1.1.4",
    "ethers": "^6.14.3",
    "firebase-admin": "^13.5.0",
    "flutterwave-node-v3": "^1.3.0",
    "form-data": "^4.0.3",
    "ics": "^3.8.1",
    "imagekit": "^6.0.0",
    "ioredis": "^5.6.1",
    "keyv": "^5.3.3",
    "keyv-redis": "^1.3.4",
    "neverthrow": "^8.2.0",
    "otpauth": "^9.4.0",
    "passport-google-oauth20": "^2.0.0",
    "postmark": "^4.0.5",
    "redis": "^5.5.6",
    "reflect-metadata": "^0.2.2",
    "resend": "^4.8.0",
    "rxjs": "^7.8.1",
    "uuid": "^13.0.0",
    "viem": "^2.30.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@react-email/components": "^0.5.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.10.7",
    "@types/react": "^19.1.12",
    "@types/supertest": "^6.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "drizzle-kit": "^0.31.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "ultracite": "5.0.29"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!uuid)"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
